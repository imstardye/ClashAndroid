<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_quick_toggle_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:maxLines="1"
            android:text="@string/widget_quick_toggle_status_inactive"
            android:textColor="@color/widget_quick_toggle_status_text_inactive"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/widget_status_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/widget_quick_toggle_tap_to_connect"
            android:textColor="@color/widget_quick_toggle_label"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">

        <ImageView
            android:id="@+id/widget_glow_bg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/widget_glow_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/widget_pulse_ring_outer"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:src="@drawable/widget_pulse_layer_2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/widget_pulse_ring_inner"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/widget_pulse_layer_1"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/widget_toggle_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_quick_toggle_button_bg">

            <ImageView
                android:id="@+id/widget_toggle_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/widget_quick_toggle_content_start"
                android:src="@drawable/ic_widget_rocket"
                android:tint="@color/widget_quick_toggle_icon_inactive" />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>

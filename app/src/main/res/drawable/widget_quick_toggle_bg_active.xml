<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_quick_toggle_corner_radius" />
            <solid android:color="#25000000" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_quick_toggle_corner_radius" />
            <gradient
                android:angle="90"
                android:endColor="@color/widget_quick_toggle_bg_active_end"
                android:startColor="@color/widget_quick_toggle_bg_active_start" />
        </shape>
    </item>
</layer-list>

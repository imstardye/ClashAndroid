<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/widget_quick_toggle_button_size"
                android:height="@dimen/widget_quick_toggle_button_size" />
            <solid android:color="#30FFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="@color/widget_quick_toggle_button_bg_active_end"
                android:startColor="@color/widget_quick_toggle_button_bg_active_start" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay" />

    <style name="ThemeOverlay.ControlColorError">
        <item name="colorControlNormal">@color/color_error</item>
        <item name="android:textColor">@color/color_error</item>
    </style>

    <style name="Widget.Clash.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Clash.Medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Clash.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Clash.Medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Clash.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Clash.Medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Clash.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.Clash.Large</item>
        <item name="cardBackgroundColor">@color/color_surface_card</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/color_surface_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">@dimen/large_action_card_elevation</item>
        <item name="rippleColor">@color/color_surface_ripple</item>
        <item name="android:clipToOutline">true</item>
    </style>
</resources>